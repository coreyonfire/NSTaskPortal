@{ var saved = TempData["saved"] ?? false; }

<div class="container">
    

    <form class="form-horizonal" action="/Config/Edit" method="post">
        <h3>User to access NetSuite with:</h3>
        <div class="form-group">
            <label class="control-label col-sm-2">User Name</label>
            <div class="col-sm-10"><input class="form-control" type="text" name="NSUserName" value="@ViewBag.NSUserName" /></div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Password</label>
            <div class="col-sm-10"><input class="form-control" type="password" name="NSPassword" value="@ViewBag.NSPassword" /></div>
        </div>
        
        <br />
        <h3>TSE Settings:</h3>
        <div class="form-group">
            <label class="control-label col-sm-2">Number of TSEs</label>
            <div class="col-sm-10"><input class="form-control" type="text" name="TSECount" value="@ViewBag.TSECount" /></div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">TSE Hours Per Day</label>
            <div class="col-sm-10"><input class="form-control" type="text" name="TSEPerDay" value="@ViewBag.TSEPerDay" /></div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
                <input class="btn" type="submit" value="submit" id="success" />
            </div>
        </div>
    </form>
    <br />
    @if ((bool)saved)
    {
        <div class="alert alert-success fade in col-sm-6 col-sm-offset-3"><button type="button" class="close close-alert" data-dismiss="alert" aria-hidden="true">×</button>Saved User.</div>
    }
</div>